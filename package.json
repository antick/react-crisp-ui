{
  "name": "react-crisp-ui",
  "version": "0.1.0",
  "description": "Collection of react + tailwind css components",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "babel src -d dist --copy-files",
    "build:css": "tailwind build src/styles.css -o dist/styles.css",
    "prepublish": "rimraf dist && mkdir dist && npm run build:css && npm run build",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "test": "npm run lint && jest -i --coverage",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "tailwindcss": ">=2.0.0"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.3.3",
    "classnames": "2.3.1",
    "color": "4.0.1",
    "deepmerge": "4.2.2",
    "framer": "1.3.6",
    "framer-motion": "4.1.17",
    "prop-types": "15.7.2",
    "react-spinners": "^0.11.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-react": "7.14.5",
    "@storybook/addon-actions": "6.3.7",
    "@storybook/addon-essentials": "6.3.7",
    "@storybook/addon-links": "6.3.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "6.3.7",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "autoprefixer": "10.3.3",
    "babel-core": "6.26.3",
    "babel-jest": "27.1.0",
    "babel-loader": "8.2.2",
    "babel-preset-react": "6.24.1",
    "babel-runtime": "6.26.0",
    "coveralls": "3.1.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-jest-dom": "3.9.0",
    "eslint-plugin-react": "7.25.0",
    "eslint-plugin-testing-library": "4.12.0",
    "husky": "7.0.2",
    "jest": "27.1.0",
    "jest-css-modules-transform": "4.3.0",
    "path": "0.12.7",
    "postcss": "8.3.6",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.2",
    "postcss-loader": "6.1.1",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
